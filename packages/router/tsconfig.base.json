{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "next/*": ["../../node_modules/next/*"]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "coverage",
    "test",
    "tests",
    "spec",
    "specs",
    "rollup.config.*",
    "jest.config.*",
    "webpack.config.*",
    "gulpfile.*",
    "Gruntfile.*",
    "karma.conf.*",
    "protractor.conf.*",
    "tsconfig.json",
    "tsconfig.base.json",
    "tsconfig.build.json",
    "tsconfig.test.json",
    "tsconfig.eslint.json",
    "tsconfig.jest.json",
    "tsconfig.rollup.json",
    "tsconfig.webpack.json",
    "tsconfig.gulp.json",
    "tsconfig.grunt.json"
  ]
}
