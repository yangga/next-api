{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES6", "DOM"],
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src"
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules", "lib", "dist", "coverage", "test", "tests", "spec", "specs"],
  "references": [
    {
      "path": "./packages/circuit-breaker"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/openapi"
    },
    {
      "path": "./packages/router"
    }
  ]
}
